
#
# Platform support
#
CONFIG_ARCH_RISCV=y
# CONFIG_ARCH_ARM_CORTEX_M is not set
CONFIG_ARCH_RV32=y

#
# Generic architecture configuration
#
CONFIG_HAS_DCACHE=y
CONFIG_HAS_ICACHE=y
# CONFIG_HAS_FPU is not set
CONFIG_HAS_MPU=y
CONFIG_NUM_MPU_REGIONS=8
CONFIG_LITTLE_ENDIAN=y
# CONFIG_BIG_ENDIAN is not set
CONFIG_ENDIANNESS_CFLAGS="-mlittle-endian"
CONFIG_SYSTICK_HZ=1000
# end of Generic architecture configuration

CONFIG_ARCH_SOCNAME="OPENTITAN_EARLGREY"
CONFIG_RUSTC_TARGET="riscv32i-unknown-none-elf"

#
# RISC-V configurations
#
CONFIG_SOC_SUBFAMILY_OPENTITAN=y
# CONFIG_ARCH_MCU_QEMURV32 is not set
CONFIG_ARCH_MCU_OPENTITAN=y
# end of RISC-V configurations
# end of Platform support

#
# Drivers
#

#
# Usart
#
# end of Usart
# end of Drivers

#
# Core functions
#
CONFIG_MAX_TASKS=8
CONFIG_SCHED_RRMQ=y
# CONFIG_SCHED_FIFO is not set
# end of Core functions

#
# Managers
#

#
# Task manager
#
CONFIG_SVC_EXCHANGE_AREA_LEN=128
CONFIG_TASK_MAGIC=0xdeadcafe
CONFIG_MAX_DEV_PER_TASK=4
CONFIG_MAX_SHM_PER_TASK=4
CONFIG_MAX_DMA_STREAMS_PER_TASK=4
# end of Task manager

#
# Debug manager
#
CONFIG_DEBUG_OUTPUT_USART=y
# CONFIG_DEBUG_OUTPUT_NONE is not set
# CONFIG_DEBUG_COLORS is not set
CONFIG_DEBUG_LEVEL=7
# end of Debug manager

#
# Security manager
#
CONFIG_SECURITY_PGC32_ENTROPY=y
# end of Security manager
# end of Managers

#
# Build mode
#
CONFIG_STANDALONE_MODE=y
CONFIG_BUILD_WITH_GDB=y
CONFIG_BUILD_TARGET_DEBUG=y
# CONFIG_BUILD_TARGET_RELEASE is not set
# CONFIG_BUILD_TARGET_AUTOTEST is not set
# CONFIG_WITH_JTAG_CONNECTED is not set
# end of Build mode

#
# Kernel security
#
CONFIG_SECU_ENFORCE_COMPARE=y
# CONFIG_SECU_ENFORCE_CFI is not set
# CONFIG_SECU_ENFORCE_FAULT_INJECTION is not set
# end of Kernel security
